<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/tv_confirm_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/np4"
        android:text="@string/asset_confirm_status"
        android:textColor="@color/text_color_443A8F"
        android:textSize="@dimen/np9"
        android:background="@drawable/account_rect_dccdaeb_rc2"
        android:layout_marginTop="@dimen/np16"
        android:layout_marginLeft="@dimen/np16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/np8"
        android:layout_marginTop="@dimen/np16"
        android:text="@string/asset_transfer_out"
        android:textColor="@color/text_color_16142D"
        android:textSize="@dimen/np15"
        app:layout_constraintStart_toEndOf="@+id/tv_confirm_status"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/np16"
        android:text="@string/asset_money_symbol"
        android:textColor="@color/text_color_16142D"
        android:textSize="@dimen/np15"
        app:layout_constraintEnd_toStartOf="@+id/tv_account_value"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_account_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/np16"
        android:layout_marginRight="@dimen/np16"
        android:text="@string/asset_house_worth_value"
        android:textColor="@color/text_color_16142D"
        android:textSize="@dimen/np15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_transfer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/asset_transfer_out_time"
        android:textColor="@color/text_color_858593"
        android:textSize="@dimen/np11"
        android:layout_marginTop="@dimen/np10"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_status"/>

    <TextView
        android:id="@+id/asset_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/np4"
        android:layout_marginTop="@dimen/np10"
        android:text="2020/12/18"
        android:textColor="@color/text_color_858593"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/tv_transfer_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_status" />



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/text_color_E5E4EE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_date" />

</androidx.constraintlayout.widget.ConstraintLayout>