<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ResourceName">

        <TextView
            android:id="@+id/tv_confirm_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="待确认"
            android:textColor="@color/text_color_443A8F"
            android:textSize="9dp"
            android:background="@drawable/account_rect_dccdaeb_rc2"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="转出"
            android:textColor="@color/text_color_16142D"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/tv_confirm_status"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="￥"
            android:textColor="@color/text_color_16142D"
            android:textSize="15dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_account_value"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_account_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:text="50,000.00"
            android:textColor="@color/text_color_16142D"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_transfer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转出时间:"
            android:textColor="@color/text_color_858593"
            android:textSize="11dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_confirm_status" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:text="2020/12/18"
            android:textColor="@color/text_color_858593"
            android:textSize="11dp"
            app:layout_constraintStart_toEndOf="@+id/tv_transfer_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_confirm_status" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预计确认日期:"
            android:textColor="@color/text_color_858593"
            android:textSize="11dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_account_value"
            app:layout_constraintEnd_toStartOf="@+id/tv_confirm_date" />

        <TextView
            android:id="@+id/tv_confirm_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020/12/18"
            android:textColor="@color/text_color_858593"
            android:textSize="11dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_account_value"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/text_color_E5E4EE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_confirm_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>